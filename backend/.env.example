# MQTT Broker Configuration
MQTT_HOST=localhost
MQTT_PORT=1884
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=s4-backend

# Robot MQTT Topics
ROBOT_STATUS_TOPIC=robot/status
ROBOT_POSE_TOPIC=robot/pose
ROBOT_CMD_VEL_TOPIC=robot/cmd_vel
ROBOT_TELEOP_TOPIC=robot/teleop
ROBOT_ERRORS_TOPIC=robot/errors
ROBOT_MODE_TOPIC=robot/mode
ROBOT_UPDATE_TOPIC=robot/update

# Legacy Topics (for backward compatibility)
MQTT_BASE_TOPIC=frontend/events
MQTT_DUMMY_TOPIC=simulator/telemetry
MQTT_DEFAULT_SUBSCRIPTIONS=["frontend/events/#","simulator/#","robot/status/#","robot/pose/#","robot/errors/#"]

# Application Settings
MAX_RECORDED_EVENTS=250
DUMMY_PUBLISH_INTERVAL=5.0
DUMMY_PUBLISH_ENABLED=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Database Settings
DATABASE_PATH=./data/robot_telemetry.db
DATABASE_ECHO=false

# Robot Simulator Settings
ENABLE_ROBOT_SIMULATOR=true
NUM_SIMULATED_ROBOTS=1
SIMULATOR_CENTER_LAT=37.7749
SIMULATOR_CENTER_LON=-122.4194
SIMULATOR_SPAWN_RADIUS=5.0
